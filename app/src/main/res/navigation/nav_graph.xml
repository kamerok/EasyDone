<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.kamer.easydone.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_selectBoardFragment"
            app:destination="@id/selectBoardFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectBoardFragment"
        android:name="com.kamer.easydone.SelectBoardFragment"
        android:label="fragment_select_board"
        tools:layout="@layout/fragment_select_board" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.kamer.easydone.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpToInclusive="false" />
</navigation>